<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="32dp"
    android:background="@color/colorPrimaryDark"
    android:layout_marginTop="90dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/tV_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_view1"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.224"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.126" />

        <EditText
            android:id="@+id/eT_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textAlignment="textStart"
            android:textColor="@color/colorNum"
            tools:ignore="Autofill,LabelFor"
            tools:layout_editor_absoluteX="170dp"
            tools:layout_editor_absoluteY="128dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/tV_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_view2"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.224"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.192" />

        <EditText
            android:id="@+id/eT_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textAlignment="textStart"
            android:textColor="@color/colorNum"
            tools:ignore="Autofill,LabelFor,RtlHardcoded"
            tools:layout_editor_absoluteX="169dp"
            tools:layout_editor_absoluteY="75dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/tV_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_result"
            android:textColor="@android:color/background_dark"
            android:textSize="38sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.224"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.301" />

        <EditText
            android:id="@+id/eT_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:ems="10"
            android:enabled="false"
            android:inputType="numberDecimal"
            android:textAlignment="textStart"
            android:textColor="@color/colorResult"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="180dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/b_sum"
            android:layout_width="244dp"
            android:layout_height="90dp"
            android:layout_marginLeft="4dp"
            android:background="@color/colorAccent"
            android:onClick="accionSumar"
            android:text="+"
            android:textSize="30sp"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="383dp" />

        <Button
            android:id="@+id/b_res"
            android:layout_width="244dp"
            android:layout_height="90dp"
            android:layout_marginLeft="4dp"
            android:background="@color/colorAccent"
            android:onClick="accionRestar"
            android:text="-"
            android:textSize="30sp"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded"
            tools:layout_editor_absoluteX="179dp"
            tools:layout_editor_absoluteY="383dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b_mul"
            android:layout_width="244dp"
            android:layout_height="90dp"
            android:layout_marginLeft="4dp"
            android:background="@color/colorAccent"
            android:onClick="accionMultiplicar"
            android:text="*"
            android:textSize="30sp"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded"
            tools:layout_editor_absoluteX="295dp"
            tools:layout_editor_absoluteY="383dp" />

        <Button
            android:id="@+id/b_div"
            android:layout_width="244dp"
            android:layout_height="90dp"
            android:layout_marginLeft="4dp"
            android:background="@color/colorAccent"
            android:onClick="accionDividir"
            android:text="/"
            android:textSize="30sp"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="483dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b_mod"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/colorAccent"
            android:onClick="accionModulo"
            android:text="%"
            android:textSize="30sp"
            tools:ignore="HardcodedText"
            tools:layout_editor_absoluteX="179dp"
            tools:layout_editor_absoluteY="470dp" />
    </LinearLayout>

</LinearLayout>